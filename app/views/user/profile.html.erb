<div class="wrapper sidebar">
    <aside id="sidebar">
        <%= image_tag @user.profile_picture, class: "img-fluid rounded mx-auto d-block" %>
        <h5><%= @user.full_name %></h5>
        <li><%= @user.username %></li>
        <%@user.website="http://wwww.github.com/thorion3006"%>
        <li class="text-truncate"><%= link_to @user.website %></li>
        <% @user.bio = "hgusdhf hshfviushv ahvyiuhbvg vsuidv." %>
        <div>
        <p class="font-italic font-weight-light">Bio: <%= @user.bio %></p>
        </div>
    </aside>

    <div class="filler">
        <ul class="nav nav-tabs nav-fill" id="profile_options" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="followers-tab" data-toggle="tab" href="#followers" role="tab" aria-controls="followers" aria-selected="true">Followers <span class="badge badge-info"><%= @user.counts[:followed_by] %></span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="following-tab" data-toggle="tab" href="#following" role="tab" aria-controls="following" aria-selected="false">Following <span class="badge badge-info"><%= @user.counts[:follows] %></span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="requests-tab" data-toggle="tab" href="#requests" role="tab" aria-controls="requests" aria-selected="false">Requests <span class="badge badge-danger">0</span></a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="followers" role="tabpanel" aria-labelledby="followers-tab">
                Followers: Sorry! clonegram currently don't have the access rights to followers_list.
            </div>
            <div class="tab-pane fade" id="following" role="tabpanel" aria-labelledby="following-tab">
                Following: Sorry! clonegram currently don't have the access rights to followers_list.
            </div>
            <div class="tab-pane fade" id="requests" role="tabpanel" aria-labelledby="requests-tab">
                Requests: Sorry! clonegram currently don't have the access rights to followers_list.
            </div>
        </div>
    </div>
</div>